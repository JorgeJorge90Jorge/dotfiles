[user]
  email = patrick.j.ellis@gmail.com
  name = Patrick Ellis
[core]
  excludesfile = ~/.gitignore
  whitespace=fix,trailing-space,cr-at-eol
  pager="diff-highlight | diff-so-fancy | less --tabs=1,5 -R"
[push]
  default = current
[branch]
  autosetuprebase = always
[branch "master"]
  remote = origin
  merge = refs/heads/master
  rebase = true
[rerere]
  enabled = true
[alias]
  st = status
  co = checkout
  fx = !sh -c 'git commit --fixup=$1' -
  sha = !sh -c 'git rev-parse --short HEAD'
  dfc = diff --cached
[color]
  ui = true
[github]
  user = pje
[credential]
  helper = osxkeychain
[gist]
  private = yes
